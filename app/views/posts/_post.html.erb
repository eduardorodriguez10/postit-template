<div class='row'>
		<div class='span0 well text-center'>
			<%= link_to vote_post_path(post, vote: true), method: 'post' do%>
				<% if logged_in? %>
					<i class='icon-arrow-up'></i>
				<% end %>
			<% end %>
			<br/>
			<%= post.total_votes %>
			<br/>
			<p>Votes</p>
			<%= link_to vote_post_path(post, vote: false), method: 'post' do %>
				<% if logged_in? %>
					<i class='icon-arrow-down'></i>
				<% end %>
			<% end %>
		</div>
		<div class='span8 well'>
			<%= render post.categories %>
			<h4><%= link_to post.title, post_path(post) %></h4>
			<p><%= post.description %> </p>
			<p>
				<span class='quiet'>posted by</span> <%= post.user.username unless post.user.blank? %>
				<small> <%= date_long(post.created_at) %></small>
				<br/>
				<small> <%=link_to post.url, fix_url(post.url) %></small>
				<br/>
				<%= link_to  "Edit Post", edit_post_path(post) if logged_in?%>
			</p>
			<small>
				<span>
					<%= link_to("#{post.comments.size} comments", post_path(post)) %>
				</span>
			</small>
		</div>
</div>