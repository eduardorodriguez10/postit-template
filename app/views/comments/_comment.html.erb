<% show_post ||= false %>
<div class='row'>
	<div class='span0 well text-center'>
				<%= link_to vote_comment_path(comment, vote: true), method: 'post' do%>
					<% if logged_in? %> 
						<i class='icon-arrow-up'></i>
					<% end %>
				<% end %>
				<br/>
				<%= comment.total_votes %>
				<br/>
				<p>Votes</p>
				<%= link_to vote_comment_path(comment, vote: false), method: 'post' do %>
					<% if logged_in? %>
						<i class='icon-arrow-down'></i>
					<% end %>
				<% end %>
	</div>
	<div class="well span8">
		<em>"<%= comment.body %>"</em>
		<% if show_post %>
			on <%= link_to comment.post.title, post_path(comment.post) %>
		<% end %>
		<span class='quiet'>by</span> <%= comment.user.username %>
		<br/>
		<small> <%= date_long(comment.created_at) %> </small>
	</div>
</div>